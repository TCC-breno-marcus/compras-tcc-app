{
  // Configuração para formatar arquivos C# ao salvar usando Csharpier
  "[csharp]": {
    "editor.defaultFormatter": "csharpier.csharpier-vscode",
    "editor.formatOnSave": true
  },

  // Configuração para formatar arquivos Vue, JS e TS ao salvar usando Prettier
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Ativa a formatação ao salvar para todos os arquivos
  "editor.formatOnSave": true,

  // (Opcional, mas recomendado) Executa o ESLint para corrigir erros ao salvar
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  }
}